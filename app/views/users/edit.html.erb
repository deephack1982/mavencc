<%= render 'users_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3><%= "Editing : #{@user.user} - #{@user.full_name}" %></h3></div>
	<div class="panel-body">
		<%= bootstrap_form_for(@user, layout: :horizontal) do |f| %>
			<%= f.static_control :user %>
						
			<%= f.password_field :password, placeholder: 'At least 8 characters including both upper and lower case letters' %>
			
			<%= f.password_field :password_confirmation, placeholder: 'Repeat the password here' %>
			
			<%= f.text_field :full_name, :placeholder => 'Enter the users first and last names' %>
			
			<%= f.select(:active, User::ACTIVE) %>
			
			<%= f.select(:user_level, User::USER_LEVELS) %>
			
			<%= f.collection_select :user_group_id, UserGroup.all, :id, :user_group %>
			
			<%= f.text_field :phone_login, :placeholder => 'optional' %>
			
			<%= f.text_field :phone_pass, :placeholder => 'optional' %>
			
			<div class="row"><%= link_to "Back", users_path, class: "btn btn-default" %><div class="pull-right"><%= f.submit "Submit", class: "btn btn-large btn-primary" %></div></div>
		<% end %>
	</div>
	</div>
	</div>
</div>
