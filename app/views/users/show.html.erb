<%= render 'users_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3><%= "#{@user.user} - #{@user.full_name}" %></h3></div>
	<div class="panel-body">
		<%= bootstrap_form_for(@user, layout: :horizontal) do |f| %>
			<%= f.static_control :user %>
			<%= f.static_control :full_name %>
			<% @yn_attributes.each do |attribute| %>
			<%= f.static_control :"#{attribute}" do %>
				<%= link_to @user["#{attribute}"], user_path(@user, :"#{attribute}" => @user["#{attribute}"]), class: "label #{item_active(@user["#{attribute}"])}" %>
			<% end %>
			<% end %>
			<%#= f.static_control :force_change_password do %>
				<%#= link_to @user.force_change_password, user_path(@user, :force_change_password => @user.force_change_password), class: "label #{item_active(@user.force_change_password)}" %>
			<%# end %>
			<%= f.static_control :user_level %>
			<%= f.static_control :group_name do %>
				<%= link_to @user.user_group, user_group_path(@user.user_group_id), class: "label label-default" %>
			<% end %>
			<% @io_attributes.each do |attribute| %>
                        <%= f.static_control :"#{attribute}" do %>
                                <%= link_to convert_permission(@user["#{attribute}"]), user_path(@user, :"#{attribute}" => @user["#{attribute}"]), class: "label #{item_active(convert_permission(@user["#{attribute}"]))}" %>
                        <% end %>
                        <% end %>
                        <%#= f.static_control :modify_custom_dialplans do%>
                                <%#= link_to convert_permission(@user.modify_custom_dialplans), user_path(@user, :modify_custom_dialplans => @user.modify_custom_dialplans), class: "label #{item_active(convert_permission(@user.modify_custom_dialplans))}" %>
                        <%# end %>
		<% end %>
	</div>
	</div>	
	<div class="row"><%= link_to "Back", users_path, class: "btn btn-default" %><div class="pull-right"><%= link_to "Edit", edit_user_path, class: "btn btn-info" %></div></div><p>
</div>
</div>
</div>
