<%= render 'users_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3><%= "#{@user.user} - #{@user.full_name}" %></h3></div>
	<div class="panel-body">
		<%= bootstrap_form_for(@user, layout: :horizontal) do |f| %>
			<%= f.static_control :user %>
			<%= f.static_control :full_name %>
			<%= f.static_control :active do %>
				<%= link_to @user.active, user_path(@user, :active => @user.active), class: "label #{item_active(@user.active)}" %>
			<% end %>
			<%= f.static_control :user_level %>
			<%= f.static_control :group_name do %>
				<%= link_to @user.user_group, user_group_path(@user.user_group_id), class: "label label-default" %>
			<% end %>
			<%= f.static_control :delete_users do %>
				<%= link_to convert_permission(@user.delete_users), user_path(@user, :delete_users => @user.delete_users), class: "label #{item_active(convert_permission(@user.delete_users))}" %>
			<% end %>
                        <%= f.static_control :delete_user_groups do %>
                                <%= link_to convert_permission(@user.delete_user_groups), user_path(@user, :delete_user_groups => @user.delete_user_groups), class: "label #{item_active(convert_permission(@user.delete_user_groups))}" %>
                        <% end %>
                        <%= f.static_control :alert_enabled do %>
                                <%= link_to convert_permission(@user.alert_enabled), user_path(@user, :alert_enabled => @user.alert_enabled), class: "label #{item_active(convert_permission(@user.alert_enabled))}" %>
                        <% end %>
		<% end %>
	</div>
	</div>	
	<div class="row"><%= link_to "Back", users_path, class: "btn btn-default" %><div class="pull-right"><%= link_to "Edit", edit_user_path, class: "btn btn-info" %></div></div><p>
</div>
</div>
</div>
