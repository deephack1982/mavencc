<%= render 'users_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3>Users</h3></div>
	<div class="panel-body">
	<ul class="nav nav-tabs">
			<li class="active"><a href="#username" data-toggle="tab">Name</a></li>
			<li><a href="#userid" data-toggle="tab">UserID</a></li>
			<li><a href="#group" data-toggle="tab">Group</a></li>
		</ul>
	<div class="tab-content">
			<div class="tab-pane active" id="username">
				<p>
				<%= bootstrap_form_tag(url: users_path, :method => 'get', layout: :inline) do |f| %>
						<%= f.search_field :search_by_fullname, value: params[:search_by_username] %>
						<%= f.submit "Search", :name => nil, class: "btn btn-info" %>
					<% end %>
				</p>
				</div>
			<div class="tab-pane" id="userid">
				<p>
					<%= bootstrap_form_tag(url: users_path, :method => 'get', layout: :inline) do |f| %>
						<%= f.search_field :search_by_userid, value: params[:search_by_userid] %>
						<%= f.submit "Search", :name => nil, class: "btn btn-info" %>
					<% end %>
				</p>
			</div>
			<div class="tab-pane" id="group">
				<p>
					<%= bootstrap_form_tag(url: users_path, :method => 'get', layout: :inline) do |f| %>
						<%= f.collection_select :search_by_group, UserGroup.all, :user_group, :user_group %>
						<%= f.submit "Search", :name => nil, class: "btn btn-info" %>
					<% end %>
				</p>
			</div>
		</div>
		</div>
	<%= will_paginate %>
	<div class="table-responsive">
		<small><%= page_entries_info @users %></small>
	<table class="table table-striped table-hover">
		<tr><th <%= sortable "user","User ID" %></th><th <%= sortable "full_name" %></th><th <%= sortable "user_level","Level" %></th><th <%= sortable "user_group","Group" %></th><th>Actions</th></tr>
		<% @users.each do |u| %>
			<tr><td><span class="label label-info"><%= link_to u.user, u %></span></td><td><%= u.full_name %></td><td><%= u.user_level %></td><td><%= u.user_group %></td><td><div class="btn-group"><%= link_to 'Delete', user_path(u), method: :delete, data: { confirm: "This will permanantly remove this user, are you sure?"}, class: "btn-sm btn-danger", role: "button" %><%= link_to "Edit", edit_user_path(u), class: "btn-sm btn-warning" %><%= link_to "Show", user_path(u), class: "btn-sm btn-info" %></div></tr>
		<% end %>
	</table>
	</div>
	<%= will_paginate %>
	</div>
</div>		
</div>
</div>

