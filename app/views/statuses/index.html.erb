<%= render 'admin/admin_header' %>
<div class="panel panel-default">
<div class="panel-heading"><h3>Statuses</h3></div>
<div class="panel-body">
	<%= link_to "Edit System Statuses", edit_status_path, class: "btn btn-info btn-block" %>
	<br/>
	<div class="table-responsive">
	<table class="table table-striped table-hover">
	<tr><th <%= sortable "id","Id" %></th><th <%= sortable "status","Status" %></th><th <%= sortable "status_name","Status Name" %></th><th <%= sortable "category","Category" %></th></tr>
	<% @statuses.each do |s| %>
	<tr><td><span><%= link_to s.id, status_path(s), class: "label label-info" %></span></td><td><%= s.status %></td><td><%= s.status_name %></td><td><%= s.category %></td></tr>
	<% end %>
	</table>
	</div>
</div>
</div>
</div>
