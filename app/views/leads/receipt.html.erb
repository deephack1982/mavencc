<%= render 'leads_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3>Receipt</h3></div>
	<div class="panel-body">
	<div class="table-responsive">
		<table class="table table-striped table-hover table-condensed">
			<tr><th>Phone Number</th><th>Issue</th></tr>
			<% @receipt[:data].each do |row| %>
			<tr<%= row_colour("#{row[1]}") %>><td><%= row[0] %></td><td><%= row[1] %></td></tr>
			<% end %>
		</table>
	</div>
	<div class="row pull-right"><%= link_to "Download", :method => "download_receipt", class: "btn btn-primary" %></div>
	</div>
	</div>
	</div>
		
