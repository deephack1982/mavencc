	<%= render 'leads_header' %>
		<div class="panel panel-default">
		<div class="panel-heading"><h3>Leads</h3></div>
		<div class="panel-body">
			<%= bootstrap_form_tag(url: search_leads_path, :method => 'get', layout: :inline) do |f| %>
				<%= f.select :search_type, options_for_select(["Phone","Postcode"]) %>
				<%= f.search_field :search, value: params[:search] %>
				<%= f.submit "Search", :name => nil, class: "btn btn-info" %>
			<% end %>
		<%= will_paginate %>
		<div class="table-responsive">
			<small><%= page_entries_info @leads %></small>
			<table class="table table-striped table-hover">
				<tr><th <%= sortable "lead_id" %></th><th <%= sortable "first_name" %></th><th <%= sortable "last_name" %></th><th <%= sortable "phone_number" %></th><th <%= sortable "list_id" %></tr>
				<% @leads.each do |l| %>
				<tr><td><span class="label label-info"><%= link_to l.lead_id, l %></span></td><td><%= l.first_name %></td><td><%= l.last_name %></td><td><%= l.phone_number %></td><td><%= link_to l.list_id, list_path(l.list_id), class: "label label-info" %></td></tr>
				<% end %>
			</table>
			</div>
		<small><%= page_entries_info @leads %></small>
		<p><%= will_paginate %></p>
		</div>
		<div class="row"><%= link_to "Back", search_leads_path, class: "btn btn-default" %></div>
	</div>
</div>
