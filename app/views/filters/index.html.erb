<%= render 'filter_header' %>
<div class="panel panel-default">
<div class="panel-heading"><h3>Filters</h3></div>
<div class="panel-body">
	<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tr><th <%= sortable "lead_filter_id" %></th><th <%= sortable "lead_filter_name" %></th><th <%= sortable "lead_filter_comments" %></th><th>Actions</th></tr>
		<% @filters.each do |f| %>
			<tr id="<%= f.id %>"><td><%= link_to f.id, f, class: "label label-info" %></td><td><%= f.lead_filter_name %></td><td><%= f.lead_filter_comments %></td><td><div class="btn-group"><%= link_to 'Delete', filter_path(f), method: :delete, :remote => true, data: { confirm: "This will permanantly remove this filter, are you sure?"}, class: "btn-sm btn-danger", role: "button" %><%= link_to "Edit", edit_filter_path(f), class: "btn-sm btn-warning" %><%= link_to "Show", filter_path(f), class: "btn-sm btn-info" %></div></tr>
		<% end %>
		</table>
		</div>
</div>
</div>
</div>
