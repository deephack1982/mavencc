<% provide(:title, 'Home') %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3>System Summary</h3></div>
	<div class="panel-body">
		<div class="panel panel-info">
		<div class="panel-body bg-info">
				<table class="table table-striped">
				<tr class="primary"><th>Agents Logged In</th><th>Agents In Calls</th><th>Active Calls</th><th>Calls Ringing</th></tr>
				<tr><td>0</td><td>0</td><td>0</td><td>0</td></tr>
				</table>
		</div>
		</div>
		<div class="col-lg-6">
		<div class="panel panel-info">
		<div class="panel-heading"><h3 class="panel-title">Calls this week</h3></div>
		<div class="panel-body">
			<%= area_chart({"2014-06-30" => 12351, "2014-07-01" => 23955, "2014-07-02" => 19765, "2014-07-03" => 23011}, discrete: true) %>
		</div>
		</div>
		</div>
		<div class="col-lg-6">
		<div class="panel panel-info">
		<div class="panel-heading"><h3 class="panel-title">Contact rate this week</h3></div>
		<div class="panel-body">
			<%= area_chart({"2014-06-30" => 72, "2014-07-01" => 66, "2014-07-02" => 80, "2014-07-03" => 78}, min: 0, max: 100, discrete: true) %>
		</div>
		</div>
		</div>
		</div>
		<div class="panel panel-primary">
		<div class="panel-heading"><h3 class="panel-title">Summary Stats</h3></div>
		<div class="panel-body">
				<table class="table table-striped table-hover">
				<tr><th>Records</th><th>Active</th><th>Inactive</th><th>Total</th></tr>
				<tr><td>Users</td><td><%= User.count %></td><td>0</td><td><%= User.count %></td></tr>
				<tr><td>Campaigns</td><td><%= Campaign.where("active = 'Y'").count %></td><td><%= Campaign.where("active = 'N'").count %></td><td><%= Campaign.count %></td></tr>
				<tr><td>Lists</td><td><%= List.where("active = 'Y'").count %></td><td><%= List.where("active = 'N'").count %></td><td><%= List.count %></td></tr>
				<tr><td>Leads</td><td></td><td></td><td><%= Lead.count %></td></tr>
				</table>
		</div>
		</div>
	</div>
	</div>
	</div>
