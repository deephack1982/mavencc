<%= render 'script_header' %>
<div class="panel panel-default">
<div class="panel-heading"><h3><%= "#{@script.script_id} - #{@script.script_name}" %></h3></div>
<div class="panel-body">
	<%= bootstrap_form_for(@script) do |f| %>
		<%= f.static_control :script_id %>
		<%= f.static_control :script_name %>
		<%= f.static_control :script_comments %>
		<%= f.static_control :script_text %>
		<%= f.static_control :group_name do %>
			<%= link_to @script.user_group, user_group_path(@script.user_group_id), class: "label label-default"  %>
		<% end %>
	<% end %>
		</div>
	</div>
		<div class="row"><%= link_to "Back", scripts_path, class: "btn btn-default" %><span class="pull-right"><%= link_to "Edit", edit_script_path, class: "btn btn-info" %></span></div>
	</div>
	</div>
</div>
