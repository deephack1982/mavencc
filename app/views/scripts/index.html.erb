<%= render 'script_header' %>
<div class="panel panel-default">
<div class="panel-heading"><h3>Scripts</h3></div>
<div class="panel-body">
	<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tr><th <%= sortable "script_id" %></th><th <%= sortable "script_name" %></th><th <%= sortable "script_comments" %></th><th>Actions</th></tr>
		<% @scripts.each do |s| %>
			<tr id="<%= s.id %>"><td><span class="label label-info"><%= link_to s.id, s %></span></td><td><%= s.script_name %></td><td><%= s.script_comments %></td><td><div class="btn-group"><%= link_to 'Delete', script_path(s), method: :delete, :remote => true, data: { confirm: "This will permanantly remove this script, are you sure?"}, class: "btn-sm btn-danger", role: "button" %><%= link_to "Edit", edit_script_path(s), class: "btn-sm btn-warning" %><%= link_to "Show", script_path(s), class: "btn-sm btn-info" %></div></tr>
		<% end %>
		</table>
		</div>
</div>
</div>
</div>
