<%= render 'script_header' %>
<div class="panel panel-default">
<div class="panel-heading"><h3>Scripts</h3></div>
<div class="panel-body">
	<div class="table-responsive">
	<table class="table table-striped table-hover">
		<tr><th <%= sortable "script_id" %></th><th <%= sortable "script_name" %></th><th <%= sortable "script_comments" %></th></tr>
		<%= @scripts.each do |s| %>
			<tr><td><%= s.id %></td><td><%= s.script_name %></td><td><%= s.script_comments %></td></tr>
		<% end %>
		</table>
		</div>
</div>
</div>
</div>
