<% provide(:title, 'Users') %>
	<h1>Users</h1>
<div class="row">
	<div class="col-md-2">	
		<ul class="nav nav-pills nav-stacked">
			<li class="active"><%= link_to "Add User", new_user_path %></li>
			<li><%= link_to "List Users", users_path %></li>
			<li><%= link_to "Search for User", '#' %></li>
			<li><%= link_to "List Groups", '#' %></li>
			<li><%= link_to "Add Group", '#' %></li>
		</ul>
	</div>
	<div class="col-md-4">
		<%= form_for(@user) do |f| %>
			<%= f.label :user %>
			<%= f.text_field :user %>
			
			<%= f.label :pass, "Password" %>
			<%= f.password_field :pass %>
			
			<%= f.label :full_name %>
			<%= f.text_field :full_name %>
			
			<%= f.label :user_level %>
			<%= f.select(:user_level, '<option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9">9</option>') %>
			
			<%= f.label :user_group %>
			<%= f.text_field :user_group %>
			
			<%= f.label :phone_login %>
			<%= f.text_field :phone_login %>
			
			<%= f.label :phone_pass %>
			<%= f.text_field :phone_pass %>
			
			<%= f.submit "Create", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-body">
				At least 2 characters and no more than 20 characters, numbers only
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				At least 8 characters including both upper and lower case letters
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				Enter the users first and last names
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				Select the user level from the drop down
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				Select the users group
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				Enter the users default phone login (optional)
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">
				Enter the users default phone password (optional)
			</div>
		</div>
	</div>
</div>
