<%= render 'user_groups_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3>User Groups</h3></div>
	<div class="panel-body">
	<%= will_paginate %>
	<div class="table-responsive">
	<small><%= page_entries_info @user_groups %></small>
	<table class="table table-striped table-hover">
		<tr><th <%= sortable "user_group" %></th><th <%= sortable "group_name" %></th><th>Actions</th></tr>
		<% @user_groups.each do |ug| %>
			<tr id="<%= ug.id %>"><td><span class="label label-info"><%= link_to ug.user_group, ug %></span></td><td><%= ug.group_name %></td><td><div class="btn-group"><%= link_to "Delete", user_group_path(ug), method: :delete, :remote => true, data: { confirm: "Are you sure you wish to delete this user group?"}, class: "btn-sm btn-danger" %><%= link_to "Edit", edit_user_group_path(ug), class: "btn-sm btn-warning" %><%= link_to "Show", user_group_path(ug), class: "btn-sm btn-info" %></div></tr>
		<% end %>
	</table>
	</div>
	<%= will_paginate %>
	</div>
</div>		
</div>
