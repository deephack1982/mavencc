<%= render 'user_groups_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3><%= "#{@user_group.user_group} - #{@user_group.group_name}" %></h3></div>
	<div class="panel-body">
	<%= bootstrap_form_for(@user_group, layout: :horizontal) do |f| %>
		<%= f.static_control :user_group %>
		<%= f.static_control :group_name %>
	<% end %>
	</div>
	</div>
	<div class="panel panel-info">
		<div class="panel-heading"><h3 class="panel-title">Users in group</h3></div>
		<div class="panel-body">
		<%= will_paginate @users_in_group %>
		<div class="table-responsive">
			<small><%= page_entries_info @users_in_group %></small>
					<table class="table table-striped table-hover table-condensed">
						<tr><th <%= sortable "user" %></th><th <%= sortable "full_name" %></th></tr>
						<% @users_in_group.each do |u| %>
						<tr><td><%= link_to u.user, user_path(u), class: "label label-info" %></td><td><%= u.full_name %></td></tr>
						<% end %>
					</table>
				</div>
				<%= will_paginate @users_in_group %>
				</div>
				</div>
<div class="row"><%= link_to "Back", user_groups_path, class: "btn btn-default" %><div class="pull-right"><%= link_to "Edit", edit_user_group_path, class: "btn btn-info" %></div></div>
</div>
</div>
