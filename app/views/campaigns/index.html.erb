<%= render 'campaigns_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3>Campaigns</h3></div>
	<div class="panel-body">
	<%= will_paginate %>
	<div class="table-responsive">
		<small><%= page_entries_info @campaigns %></small>
	<table class="table table-striped table-hover">
		<tr><th <%= sortable "campaign_id" %></th><th <%= sortable "campaign_name" %></th><th <%= sortable "Dialable in Campaign" %></th><th <%= sortable "active" %></th><th>Actions</th></tr>
		<% @campaigns.each do |c| %>
		<tr id="<%= c.id %>">
		<td><%= link_to c.campaign_id, c, class: "label label-info" %></td>
		<td><%= c.campaign_name %></td>
		<td><%= c.campaign_dialable %></td>
		<td><%= c.active %></td>
		<td><div class="btn-group"><%= link_to 'Delete', campaign_path(c), method: :delete, :remote => true, data: { confirm: "This will permanantly remove this campaign, are you sure?"}, class: "btn-sm btn-danger", role: "button" %><%= link_to "Edit", edit_campaign_path(c), class: "btn-sm btn-warning" %><%= link_to "Show", campaign_path(c), class: "btn-sm btn-info" %></div></tr>
		<% end %>
		</table>
		</div>
		<%= will_paginate %>
	</div>
	</div>
	</div>
