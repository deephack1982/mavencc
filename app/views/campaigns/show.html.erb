<%= render 'campaigns_header' %>
	<div class="panel panel-default">
	<div class="panel-heading"><h3>Campaigns</h3></div>
	<div class="panel-body">
	<%= bootstrap_nested_form_for(@campaign, layout: :horizontal) do |f| %>
		<%= f.static_control :campaign_id %>
		<%= f.static_control :campaign_name %>
		<%= f.static_control :campaign_description %>
		<%= f.static_control :active %>
		<%= f.static_control :user_group %>
		<% end %>
		</div>
		</div>
		<div class="panel panel-info">
		<div class="panel-heading"><h3 class="panel-title">Lists within this campaign</h3></div>
		<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-striped table-hover">
			<tr><th <%= sortable "list_id" %></th><th <%= sortable "list_name" %></th><th <%= sortable "active" %></th><th <%= sortable "campaign_name" %></th><th <%= sortable "Leads" %></th><th <%= sortable "Last called" %></th></tr>
			<% @campaign.lists.each do |l| %>
			<tr><td><span class="label label-info"><%= link_to l.list_id, l %></span></td><td><%= l.list_name %></td><td><%= l.active %></td><td><%= l.campaign_name %></td><td><%= l.leads.count %></td><td><%= l.list_lastcalldate.to_date %></td></tr>
			<% end %>
			</table>
		</div>
		<br>
		<h3 class="bg-info"><%= number_with_delimiter(@leads_in_campaign, :delimiter => ',') %> leads to be dialled in this campaign</h3>
		</div>
		</div>
	
	<div class="row"><%= link_to "Back", campaigns_path, class: "btn btn-default" %><div class="pull-right"><%= link_to "Edit", edit_campaign_path, class: "btn btn-info" %></div></div><p>
</div>
</div>
</div>
